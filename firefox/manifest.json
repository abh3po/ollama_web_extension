{
  "manifest_version": 3,
  "name": "Firefox Ollama LLM Extension (MV3)",
  "version": "1.0",
  "description": "An extension to interact with a local Ollama LLM.",
  "icons": {
    "48": "icon01.png"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon01.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "ollama-llm-extension@firefox.user"
    }
  }
}